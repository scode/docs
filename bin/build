#!/usr/bin/env bash
set -euo pipefail

MDBOOK_VERSION="0.5.2"
MDBOOK_DIR="${HOME}/bin"

mkdir -p "${MDBOOK_DIR}"
curl -sSL "https://github.com/rust-lang/mdBook/releases/download/v${MDBOOK_VERSION}/mdbook-v${MDBOOK_VERSION}-x86_64-unknown-linux-gnu.tar.gz" | tar -xz -C "${MDBOOK_DIR}"
export PATH="${MDBOOK_DIR}:$PATH"

mdbook build
